	pages = {033051},
	number = {3},
	journaltitle = {Physical Review Research},
	shortjournal = {Phys. Rev. Res.},
	author = {Ranfagni, A. and Børkje, K. and Marino, F. and Marin, F.},
	urldate = {2024-11-13},
	date = {2022-07-18},
	note = {Publisher: American Physical Society},
}

@article{piotrowski_simultaneous_2023,
	title = {Simultaneous ground-state cooling of two mechanical modes of a levitated nanoparticle},
