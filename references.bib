	author = {Romero-Isart, O. and Pflanzer, A. C. and Juan, M. L. and Quidant, R. and Kiesel, N. and Aspelmeyer, M. and Cirac, J. I.},
	urldate = {2024-11-21},
	date = {2011-01-07},
	note = {Publisher: American Physical Society},
}

